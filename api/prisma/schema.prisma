generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum PostStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String?  // Nullable for users created by admin
  role      Role     @default(USER)
  name      String?
  isPasswordSet Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  
  @@index([email])
  @@index([role])
}

model Post {
  id            String     @id @default(uuid())
  title         String
  content       String
  status        PostStatus @default(PENDING)
  rejectionReason String?
  userId        String
  user          User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}
